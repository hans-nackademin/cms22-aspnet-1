@model SignUpForm

<form asp-action="SignUp" method="post" asp-route-ReturnUrl="@Model.ReturnUrl">
    <div class="mb-3">
        <div asp-validation-summary="ModelOnly"></div>
    </div>
    
    <div class="mb-3">
        <input asp-for="FirstName" placeholder="First Name" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="mb-3">
        <input asp-for="LastName" placeholder="Last Name" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Email" placeholder="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Password" placeholder="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <button type="submit" class="btn btn-success">SUBMIT</button>
</form>