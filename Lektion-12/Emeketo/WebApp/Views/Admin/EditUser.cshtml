@model AdminEditUserViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.Profile.FirstName" class="control-label"></label>
                <input asp-for="User.Profile.FirstName" class="form-control" />
                <span asp-validation-for="User.Profile.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Profile.LastName" class="control-label"></label>
                <input asp-for="User.Profile.LastName" class="form-control" />
                <span asp-validation-for="User.Profile.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Profile.StreetName" class="control-label"></label>
                <input asp-for="User.Profile.StreetName" class="form-control" />
                <span asp-validation-for="User.Profile.StreetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Profile.PostalCode" class="control-label"></label>
                <input asp-for="User.Profile.PostalCode" class="form-control" />
                <span asp-validation-for="User.Profile.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Profile.City" class="control-label"></label>
                <input asp-for="User.Profile.City" class="form-control" />
                <span asp-validation-for="User.Profile.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.RoleName" class="control-label"></label>
                <input asp-for="User.RoleName" class="form-control" />
                <span asp-validation-for="User.RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
