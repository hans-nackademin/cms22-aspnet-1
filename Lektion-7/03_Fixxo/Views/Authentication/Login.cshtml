@model LoginFormModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_CenterScreen.cshtml";
}


<div class="container">
    <form asp-action="Login" method="post" asp-route-returnUrl="@Model.ReturnUrl" novalidate>
        <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label"></label>
            <input asp-for="@Model.Email" class="form-control" onkeyup="validate_email(event)" />
            <span asp-validation-for="@Model.Email" class="form-text text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Password" class="form-label"></label>
            <input asp-for="@Model.Password" class="form-control" onkeyup="validate_password(event)" />
            <span asp-validation-for="@Model.Password" class="form-text text-danger"></span>
        </div>
        <div class="mb-4">
            <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>
        </div>
        <div class="d-grid mt-2">
            <button type="submit" class="btn btn-theme">LOGIN</button>
            <p class="mt-3 text-center">Don't have an account yet? <a asp-action="Register">Become a Member</a>.</p>
        </div>
    </form>
</div>