@model RegisterFormModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout_CenterScreen.cshtml";
}

<div class="container" style="width: 800px">
    <div class="row">
        <div class="col-12">
            <form asp-action="Register" method="post" asp-route-returnUrl="@Model.ReturnUrl" novalidate>
                <div class="mb-3">
                    <label asp-for="@Model.FirstName" class="form-label"></label>
                    <input asp-for="@Model.FirstName" class="form-control" onkeyup="validate_firstname(event)" />
                    <span asp-validation-for="@Model.FirstName" class="form-text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.LastName" class="form-label"></label>
                    <input asp-for="@Model.LastName" class="form-control" onkeyup="validate_lastname(event)" />
                    <span asp-validation-for="@Model.LastName" class="form-text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <input asp-for="@Model.Email" class="form-control" onkeyup="validate_email(event)" />
                    <span asp-validation-for="@Model.Email" class="form-text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Password" class="form-label"></label>
                    <input asp-for="@Model.Password" class="form-control" onkeyup="validate_password(event)" />
                    <span asp-validation-for="@Model.Password" class="form-text text-danger"></span>
                </div>
                <div class="mb-5">
                    <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
                    <input asp-for="@Model.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="@Model.ConfirmPassword" class="form-text text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.StreetName" class="form-label"></label>
                    <input asp-for="@Model.StreetName" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PostalCode" class="form-label"></label>
                    <input asp-for="@Model.PostalCode" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.City" class="form-label"></label>
                    <input asp-for="@Model.City" class="form-control" />
                </div>
                <div class="mb-4">
                    <div asp-validation-summary="ModelOnly" class="form-text text-danger"></div>
                </div>
                <div class="d-grid mt-2">
                    <button type="submit" class="btn btn-theme">REGISTER</button>
                    <p class="mt-3 text-center">Already have an Account? <a asp-action="Login">Login</a>.</p>
                </div>
            </form>
        </div>
    </div>
</div>